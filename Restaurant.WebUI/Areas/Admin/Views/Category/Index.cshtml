@model List<Restaurant.WebUI.DTOs.CategoryDTOs.ResultCategoryDTO>﻿

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						@if (Model.Count() > 0)
						{
							<div class="card-sub">
								Kategori ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
							</div>
							<table class="table table-hover table-bordered mt-3">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Kategori Adı</th>
										<th scope="col">Durum</th>
										<th scope="col">Sil</th>
										<th scope="col">Güncelle</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<th>@count</th>
											<td>@item.Name</td>
											<td>
												@{
													if (item.Status == true)
													{
														<button onclick="updateStatus(@item.CategoryID)" type="submit" class="btn btn-success">Aktif</button>
													}
													else
													{
														<button onclick="updateStatus(@item.CategoryID)" type="submit" class="btn btn-danger">Pasif</button>
													}
												}
											</td>
											<td>
												<button onclick="deleteCategory(@item.CategoryID)" type="submit" class="btn btn-outline-danger"><i class="la la-trash"></i> Sil</button>
											</td>
											<td>
												<a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-info"><i class="la la-pencil"></i> Güncelle</a>
											</td>
										</tr>
									}
								</tbody>
							</table>
						}
						else
						{
							<p>Kayıtlı Herhangi Bir Kategori Verisi Bulunmamaktatır.</p>
						}		
						<a href="/Admin/Category/CreateCategory/" class="btn btn-outline-primary"><i class="la la-plus-circle"></i> Yeni Kategori</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
	function deleteCategory(id) {
		Swal.fire({
			title: 'Silmek istediğinize emin misiniz?',
			text: 'Bu öğeyi silerseniz geri alamazsınız!',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Sil',
			cancelButtonText: 'İptal'
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Admin/Category/DeleteCategory?id=" + id;
			}
		});
	}
</script>

<script>
	function updateStatus(id) {
		Swal.fire({
			title: 'Durum',
			text: 'Durumu değiştirmek istediğinizden emin misiniz?',
			icon: 'question',
			showCancelButton: true,
			confirmButtonText: 'Değiştir',
			cancelButtonText: 'İptal'
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Admin/Category/UpdateStatus?id=" + id;
			}
		});
	}
</script>
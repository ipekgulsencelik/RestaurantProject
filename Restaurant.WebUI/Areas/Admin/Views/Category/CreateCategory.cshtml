@model Restaurant.WebUI.DTOs.CategoryDTOs.CreateCategoryDTO

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Kategori Adı</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Kategori Adı Giriniz" required />
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary"><i class="la la-save"></i> Kaydet</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
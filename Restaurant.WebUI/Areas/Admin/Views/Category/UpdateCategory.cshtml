@model Restaurant.WebUI.DTOs.CategoryDTOs.UpdateCategoryDTO

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Kategori Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="CategoryID" />
                            <div class="form-group">
                                <label for="categoryname">Kategori Adı</label>
                                <input type="text" asp-for="Name" id="categoryname" class="form-control" placeholder="Kategori Adı Giriniz">
                            </div>
                            <div class="form-group">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" asp-for="Status">
                                    <span class="form-check-sign" for="Status">Durum</span>
                                </label>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info"><i class="la la-pencil"></i> Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>